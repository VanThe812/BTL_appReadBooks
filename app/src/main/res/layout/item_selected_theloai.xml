<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#AEACAC"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/tv_selected_theloai"
        android:layout_toStartOf="@+id/img_drop_down"
        android:text="Custom spinner"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/img_drop_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_arrow_drop_down_black_18"
        android:layout_centerVertical="true"
        />
</RelativeLayout>